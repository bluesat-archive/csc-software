<?xml version="1.0"?>
<!--
   ==================================
   BLUESAT Application Isolation List
   ==================================

This file is manually updated with application information 
and is used to remove applications from the compilation
process, thus removing them from the image.

name:    Name of the application

desc:    Description of the application and its purpose

disable: [YES|NO] The files in the list are not included in
         the compilation process if YES is specified

files:   A list of space seperated files to ignore from the
         compilation process.

==========
 Example:
==========         
<applist>
   <app>
      <name>MOO</name>
      <desc>Moo printer application to flood screen</desc>
      <disable>NO</disable>
      <files>Moo_print.c Cow_push.c patty.c</files>
   </app>
</applist>

-->
<applist>
   <Demo_Application1>
      <name>Demo Application1</name>
      <desc>Demo application to demonstrate an featured application setup</desc>
      <disable>YES</disable>
      <files>Demo_Application_1.c</files>
   </Demo_Application1>
   <Demo_Application2>
      <name>Demo Application2</name>
      <desc>Demo application to demonstrate a pure application setup</desc>
      <disable>YES</disable>
      <files>Demo_Application_2.c</files>
   </Demo_Application2>
   <MemoryDemo_Application>
      <name>Memory Demo</name>
      <desc>Demo application using additional memory and checking stack memory</desc>
      <disable>NO</disable>
      <files>memoryDemo.c</files>
   </MemoryDemo_Application>
   <StorageDemo_Application>
      <name>Storage Demo</name>
      <desc>Demo application for using CSC storage</desc>
      <disable>NO</disable>
      <files>storageDemo.c</files>
   </StorageDemo_Application>
   <GpioDemo>
      <name>GPIO Demo</name>
      <desc>Demo application to test GPIO</desc>
      <disable>YES</disable>
      <files>gpioDemo.c</files>
   </GpioDemo>
   <SwitchingDemo>
      <name>Switching Demo</name>
      <desc>Demo application to test Switching circuit</desc>
      <disable>YES</disable>
      <files>switchingDemo.c</files>
   </SwitchingDemo>
   <ModemDemo>
      <name>Modem Demo</name>
      <desc>Demo application to test Modem</desc>
      <disable>YES</disable>
      <files>modemDemo.c</files>
   </ModemDemo>
</applist>
